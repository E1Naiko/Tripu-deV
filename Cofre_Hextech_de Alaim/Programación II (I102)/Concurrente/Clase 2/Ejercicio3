        cantflor:= cantflor + 1 
      sino
        si (HayPapelEnLaEsquina)
          tomarPapel
          cantpapel:= cantpapel + 1
      mover  
    Informar(cantflor)
    Informar(cantpapel)
  fin   
variables 
  robot1: tipo1 
  robot2: tipo2
  robot3: tipo3
  robot4: tipo4
comenzar 
  AsignarArea(robot1,areaR1)
  AsignarArea(robot2,areaR2)
  AsignarArea(robot3,areaR3)
  AsignarArea(robot4,areaR4)
  Iniciar(robot1, 1, 1) 
  Iniciar(robot2, 1, 2) 
  Iniciar(robot3, 1, 3) 
  Iniciar(robot4, 1, 4) 
fin
