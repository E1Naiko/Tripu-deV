programa Bloquear
areas
  areaR1 : AreaPC(1,1,100,1)
  areaR2 : AreaPC(1,2,100,2)
  areaR3 : AreaPC(1,3,100,3)
  areaR4 : AreaPC(1,4,100,4)
robots 
  robot tipo1
  variables
    cantflor:numero
    cantpapel:numero
  comenzar
    cantflor:= 0
    cantpapel:= 0
    derecha
    repetir 99
      si (HayFlorEnLaEsquina) 
        tomarFlor
        cantflor:= cantflor + 1 
      sino
        si (HayPapelEnLaEsquina)
          tomarPapel
          cantpapel:= cantpapel + 1
      mover 
    Informar(cantflor)
    Informar(cantpapel) 
  fin
  robot tipo2
  variables
    cantflor:numero
    cantpapel:numero
  comenzar
    cantflor:= 0
    cantpapel:= 0
    derecha
    repetir 99
      si (HayFlorEnLaEsquina) 
        tomarFlor
        cantflor:= cantflor + 1 
      sino
        si (HayPapelEnLaEsquina)
          tomarPapel
          cantpapel:= cantpapel + 1
      mover 
    Informar(cantflor)
    Informar(cantpapel)
  fin
  robot tipo3
  variables
    cantflor:numero
    cantpapel:numero
