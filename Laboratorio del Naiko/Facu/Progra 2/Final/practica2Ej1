programa plantillaGeneral
procesos
  proceso limpiar(ES cont: numero)
  comenzar
    repetir 9
      mientras (HayFlorEnLaEsquina)
        tomarFlor
        cont:= cont+1
      mover
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      cont:=cont+1
  fin
areas
  areaR0 : AreaP(1,1,1,10)
  areaR1 : AreaP(2,11,2,20)
robots
  robot tipo0
  variables
    cont : numero
    cont2 : numero
    dif : numero
  comenzar
    cont := 0
    dif := 0
    limpiar(cont)
    RecibirMensaje(cont2, robot1)
    dif := cont - cont2
    si dif>0
      EnviarMensaje(0, robot1)
      Informar(dif)
    sino
      si dif<0
        dif := (-1) * dif
        EnviarMensaje(dif, robot1)
      sino
        EnviarMensaje(0,robot1)
  fin
  robot tipo1
  variables
    cont : numero
    dif : numero
  comenzar
    cont := 0
    dif := 0
    limpiar(cont)
    EnviarMensaje(cont,robot0)
    RecibirMensaje(dif,robot0)
    si dif>0
      Informar(cont)
  fin
variables
  robot0: tipo0
  robot1: tipo1
comenzar
  AsignarArea(robot0,areaR0)
  AsignarArea(robot1,areaR1)
  Iniciar(robot0, 1, 1)
  Iniciar(robot1, 2, 11)
fin
fin